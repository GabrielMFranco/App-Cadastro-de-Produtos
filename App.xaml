<Application x:Class="App_Cadastro_de_Produtos.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:App_Cadastro_de_Produtos"
			 xmlns:c="clr-namespace:App_Cadastro_de_Produtos.Converters"
             StartupUri="View/MainWindow.xaml"
			 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
			 xmlns:system="clr-namespace:System;assembly=mscorlib">
	<Application.Resources>
		<ResourceDictionary>
			<c:BoolVisibilityConverter x:Key="BoolVisibilityConverter"/>
			<c:ColorValidityDate x:Key="ColorValidityDate"/>

			<SolidColorBrush x:Key="MainBackgroundBrush" Color="white"/>
			<SolidColorBrush x:Key="TextBrush" Color="black"/>
			<SolidColorBrush x:Key="DataGridBackgroundBrush" Color="#F0F0F0"/>
			<SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="white"/>

			<TextBlock x:Key="DarkModeToggleContent" Text="🌜"/>

			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Styles/Buttons.xaml"/>
				<ResourceDictionary Source="Styles/TextBox.xaml"/>
			</ResourceDictionary.MergedDictionaries>
			
			
		</ResourceDictionary>
	</Application.Resources>
</Application>
